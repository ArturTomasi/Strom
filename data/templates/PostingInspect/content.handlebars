<html>

<head>
    <meta charset="UTF-8">
    <style>
        body {
          background-color: #ECEFF1;
          height: 100%;
          overflow: hidden;
        }
        .field {
          font-weight: bolder;
          color: #263238;
          padding: 5px 15px 5px 20px;
          width: 20%;
          border-radius: 10px;
          background: #90A4AE;
          font-size: 12px;
        }
        .value {
          padding: 8px;
          color: #37474F;
          font-weight: bolder;
          border-radius: 10px;
          background: #CFD8DC;
          font-size: 12px;
          width: 80%;
        }
        .head {
          padding: 10px 10px 0px 10px;
          font-size: 25px;
          text-align: left;
          color: #37474F;
          font-weight: bolder;
          width: 100%;
        }
        .info {
          padding-left: 50px;
          font-size: 14px;
          text-align: left;
          width: 100%;
          padding-bottom: 10px;
        }
    </style>
</head>

<body>
    <table>
        <tbody>
            <tr>
                <th id="posting_name" colspan="1" class="head ng-binding">{{posting.name}}</th>
                <th>
                    <img style="width: 32px;" src="http://localhost:8080/icons/posting.png">
                </th>

            </tr>
        </tbody>
    </table>

    <table style="width: 100%">
        <tbody>
            <tr>
                <th id="posting_info" colspan="2" class="info ng-binding">{{posting.info}}</th>
            </tr>

            <tr>
                <td class="field">Data Real:</td>
                <td id="real_date" class="value ng-binding">{{formatDate posting.realDate}}</td>
            </tr>

            <tr>
                <td class="field">Data Estimada:</td>
                <td id="estimate_date" class="value ng-binding">{{formatDate posting.estimateDate}}</td>
            </tr>

            <tr>
                <td class="field">Valor Real:</td>
                <td id="real_value" class="value ng-binding">{{formatValue posting.realValue}}</td>
            </tr>

            <tr>
                <td class="field">Valor Estimado:</td>
                <td id="estimate_value" class="value ng-binding">{{formatValue posting.estimateValue}}</td>
            </tr>

            <tr>
                <td class="field">Finaliza Automáticamente:</td>
                <td id="fl_completion_auto" class="value ng-binding">{{formatBoolean}}</td>
            </tr>

            <tr>
                <td class="field">Situação:</td>
                <td id="state" class="value ng-binding">{{formatState posting.state}}</td>
            </tr>

            <tr>
                <td class="field">Categoria do Lançamento:</td>
                <td id="ref_posting_category" class="value ng-binding">{{formatRef posting.category}}</td>
            </tr>

            <tr>
                <td class="field">Responsável:</td>
                <td id="ref_user" class="value ng-binding">{{formatRef posting.user}}</td>
            </tr>

            <tr>
                <td class="field">Tipo de Finalização:</td>
                <td id="ref_completion_type" class="value ng-binding">{{formatRef posting.completionType}}</td>
            </tr>

            <tr>
                <td class="field">Entidade:</td>
                <td id="ref_entity" class="value ng-binding">{{formatRef posting.entity }}</td>
            </tr>
        </tbody>
    </table>
</body>

</html>